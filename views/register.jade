extends layout

block content
  form(method='POST')
    label(for='email')
      b Email
    input#email(type='email', placeholder='Enter Email', name='email', required='required')
    label(for='psw')
      b Password
    input#psw(type='password', placeholder='Enter Password', name='psw', required='required')
    label(for='pswrepeat')
      b Repeat Password
    input#pswrepeat(type='password', placeholder='Repeat Password', name='pswrepeat', required='required')
    label(for='fname')
      b Full Name
    input#fname(type='text', placeholder='Enter Full Name', name='fname', required='required')
    label(for='nid')
      b NID
    input#fname(type='text', placeholder='Enter National Id No', name='nid', required='required')
    label(for='phone1')
      b First Phone
    input#fname(type='text', placeholder='Enter Phone No', name='phone1', required='required')
    label(for='phone2')
      b Second Phone
    input#fname(type='text', placeholder='Enter Phone No', name='phone2')
    label(for='dob')
      b Date Of Birth
    input#fname(type='date', placeholder='Enter National Id No', name='dob', required='required')
    button(type='submit') Register
