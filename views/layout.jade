doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
    script( src='/stylesheets/jquery.min.js' )
    script( src='/stylesheets/bootstrap.bundle.min.js' )

    //- link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet")
    //- script( src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js' )
    //- script( src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' )
  body
    main
      h1= title 
        a(href="/").btn.btn-outline-primary Home
        if authorised  
          a(href='/change-password').btn.btn-outline-warning Change Password        
          a(href="/exit").btn.btn-outline-danger Log Out
      if typeof messages != 'undefined'
        each msg in messages
          p= msg
      block content