extends layout

block content
  if authorised
    p Welcome #{fname} | 
      a(href="/exit") Log Out | 
      a(href="/") Home
    if typeof users != 'undefined'
      form(method='POST')
        div.row.justify-content-center
          label(for='userSelect').col-md-2
              b User
          div.col-md-4
            select(id="userSelect", name="user_id" , required='required').form-control
                option(value="") --Select User--
                each user in users                   
                    option(value="#{user.user_id}") #{user.user_fname}       
          label(for='month').col-md-2
              b Select Month
          div.col-md-4
            input#month(type='month', name='month', required='required').form-control
          br 
          br
          label(for='breakfast').col-md-2
              b Breakfast
          div.col-md-2
            input#breakfast(type='number', name='breakfast', required='required').form-control
          label(for='lunch').col-md-2
              b Lunch
          div.col-md-2
            input#lunch(type='number', name='lunch', required='required').form-control
          label(for='dinner').col-md-2
              b Dinner
          div.col-md-2
            input#dinner(type='number', name='dinner', required='required').form-control
          br 
          br
          button(type='submit') Process One Month Meal
  else
    p Don't have an account yet? 
      a(href='/register') Register
    p Already have an account? 
      a(href='/login') Login